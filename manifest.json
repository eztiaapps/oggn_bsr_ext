{
  "manifest_version": 3,
  "name": "Datalotus Portfolio Assistant v1.0",
  "version": "1.0",
  "description": "Extract financial data from stock market websites",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.screener.in/company/*"],
  "content_scripts": [
    {
      "matches": ["https://www.screener.in/company/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
